{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Zephyr: Build (alnicko_speaker)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "source ${workspaceFolder}/setup-zephyr-env.sh && west build -b alnicko_speaker -d build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Zephyr: Flash (STM32CubeProgrammer)",
            "type": "shell",
            "dependsOn": "Zephyr: Build (alnicko_speaker)",
            "command": "bash",
            "args": [
                "-lc",
                "source ${workspaceFolder}/setup-zephyr-env.sh && west flash -d build --runner stm32cubeprogrammer"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Zephyr: Clean Build Artifacts",
            "type": "shell",
            "command": "bash",
            "args": [
                "-lc",
                "rm -rf build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}
