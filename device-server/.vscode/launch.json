{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Device Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "smartStep": true,
      "restart": true,
      "presentation": {
        "hidden": false,
        "group": "device-server",
        "order": 1
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Device Server",
      "port": 9229,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "restart": true,
      "presentation": {
        "hidden": false,
        "group": "device-server",
        "order": 2
      }
    }
  ]
}

